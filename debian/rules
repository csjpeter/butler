#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

export DEB_BUILD_MAINT_OPTIONS = hardening=+all
export DEB_CFLAGS_MAINT_APPEND  = -Wall -pedantic
export DEB_LDFLAGS_MAINT_APPEND = -Wl,--as-needed

%:
	dh $@ --buildsystem=cmake

override_dh_auto_configure:
	dh_auto_configure -- \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr

override_dh_auto_install:
	# Install the binary
	install -D -m 0755 $(CURDIR)/obj-x86_64-linux-gnu/build/obj/butler \
		$(CURDIR)/debian/butler0.1/usr/bin/butler0.1
	# Install desktop file
	install -D -m 0644 $(CURDIR)/share/applications/butler.desktop \
		$(CURDIR)/debian/butler0.1/usr/share/applications/butler0.1.desktop
	# Install icon to pixmaps
	install -D -m 0644 $(CURDIR)/share/icons/butler.png \
		$(CURDIR)/debian/butler0.1/usr/share/pixmaps/butler0.1.png
	# Install icons directory
	mkdir -p $(CURDIR)/debian/butler0.1/usr/share/butler/icons
	cp -r $(CURDIR)/share/icons/* $(CURDIR)/debian/butler0.1/usr/share/butler/icons/
	# Install translation files
	mkdir -p $(CURDIR)/debian/butler0.1/usr/share/butler/translations
	install -m 0644 $(CURDIR)/share/translations/*.qm \
		$(CURDIR)/debian/butler0.1/usr/share/butler/translations/
	# Install CSS files
	mkdir -p $(CURDIR)/debian/butler0.1/usr/share/butler/css
	install -m 0644 $(CURDIR)/share/css/application.css \
		$(CURDIR)/debian/butler0.1/usr/share/butler/css/
	# Install man page
	install -D -m 0644 $(CURDIR)/share/man/man1/butler0.1.1 \
		$(CURDIR)/debian/butler0.1/usr/share/man/man1/butler0.1.1

override_dh_strip:
	dh_strip --dbg-package=butler0.1-dbg
